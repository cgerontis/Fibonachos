import pyvjoy
import random
import time
import math

MAX_VJOY = 32767
j = pyvjoy.VJoyDevice(1)
j.set_axis(pyvjoy.HID_USAGE_X, 0)
val = 0
time.sleep(2)

for x in range(100):
    input = math.floor(val*MAX_VJOY)
    j.set_axis(pyvjoy.HID_USAGE_X, input)
    val += 0.01
    time.sleep(0.01)

for x in range(100):
    input = math.floor(val*MAX_VJOY)
    j.set_axis(pyvjoy.HID_USAGE_X, input)
    val -= 0.01
    time.sleep(0.01)
